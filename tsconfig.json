{
    "compilerOptions": {
        "target": "ES6",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "downlevelIteration": true,
        "lib": ["es2022", "dom", "dom.iterable"],
        "rootDir": "./src",
        "outDir": "./dist",
        "sourceMap": true,
        "allowJs": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
